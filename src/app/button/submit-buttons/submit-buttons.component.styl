$button-width = 150;
$spinner-width = 25; // $button-width/6

$text-light = #fefefe;

#body{
  padding: 10px;
  font-size: 16px;
  font-family: 'Space Mono', sans-serif;
  text-align: center;
  background-color: #eaf0ff;
  color: #002868;
  h1{
    font-size: 1.5em;
  }

  small{
    color: #888;
  }

  .button{
    display: inline-block;
    min-width: 150px; // $button-width
    margin: 20px auto;
    background: #8BC34A; // $btn-bg
    color: #fefefe; // $text-light
    font-size: 1.2em;
    padding: 1em;
    border-radius: 4px;
    text-align: center;
    position: relative;
    cursor: pointer;
    appearance: none;
    border: 0;
    transition: border-radius linear 0.05s, width linear 0.05s;

    &:focus{
      outline: 0;
    }
  }


  .animateSpin{
    width: 50px; // $button-width/2.2
    height: 50px; // $button-width/2.2
    min-width: 0;
    border-radius: 50%;
    color: transparent; // убираем текст
    font-size: 0px; // убираем текст

    &:after{
      position: absolute;
      content: '';
      width: 25px; // $spinner-width
      height: 25px; // $spinner-width
      border: 4px solid #fefefe; // $text-light
      border-radius: 50%;
      border-left-color: transparent;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      animation: spin linear 2.5s infinite; // безконечный спинер
    }

  }


  .success{
    width: 50px; // $button-width/2.2
    height: 50px; // $button-width/2.2
    min-width: 0;
    border-radius: 50%;
    color: transparent; // убираем текст
    font-size: 0px; // убираем текст

    &:before{
      position: absolute;
      content: '';
      width: 25px; // $spinner-width
      height: 12px; // $spinner-width/2
      border: 4px solid  #fefefe; // $text-light
      border-right: 0;
      border-top: 0;
      left: 51%;
      top: 49%;
      animation: success ease-in 0.5s forwards; // безконечный спинер
    }
  }


  .error{
    width: 50px; // $button-width/2.2
    height: 50px; // $button-width/2.2
    min-width: 0;
    border-radius: 50%;
    color: transparent; // убираем текст
    font-size: 0px; // убираем текст

    position: relative;
    animation: vibrate ease-in 0.5s forwards; // проиграем вибрацию и оставим цвет.

    &:before{
      color: #fff;
      position: absolute;
      content: '!';
      font-size: 1.8rem;
      font-weight: bold;
      text-align: center;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%) scale(0);
      animation: error ease-in 0.5s forwards; // проиграем и оставим.
    }
  }
}

@media (min-width: 780px){
  .wrapper {
    width: 600px;
    display: grid;
    //grid-template-columns: repeat(2, [col] calc(100%/2) );
    grid-auto-rows: 120px;
    margin: 30px auto 40px;
  }
}

// анимация статуся запроса
@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg) scale(1); }
  100% { transform: translate(-50%, -50%) rotate(1080deg) scale(1); } // rotate(360deg) * 3
}

@keyframes success{
  // небольшой поворот при появлении
  from {
    transform: translate(-50%, -50%) rotate(0) scale(0);
  }
  to {
    transform: translate(-50%, -50%) rotate(-50deg) scale(1);
  }
}

@keyframes error {
  from {
    transform: translate(-50%, -50%) scale(0);
  }
  to {
    transform: translate(-50%, -50%) scale(1);
    background-color: #f44336;
  }
}
@keyframes vibrate {
  0%, 30%, 60%, 85%, 100% {
    left: -2;
    background-color: #f44336;
  }
  10%, 40%, 70%, 90% {
    left: 0px;
    background-color: #8BC34A; // $btn-bg
  }
  20%, 50%, 80%, 95% {
    left: 2px;
    background-color: #f44336;
  }
}

