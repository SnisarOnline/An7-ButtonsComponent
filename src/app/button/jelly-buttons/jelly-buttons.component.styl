#body{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  margin: 0;

  #boxes{
    counter-reset: number; // http://htmlbook.ru/css/counter-reset  /* Инициируем счетчик */
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    position relative
    &:after {
      // изменим цвет фона на цвет выбраной кнопки
      z-index: -1;
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      transition: all .5s ease;
      background: var(--bg-color, #fff); // Если нету переменной то используется стандартный цвет
      opacity: .2;
    }
    div{
      display: flex;
      align-items: center;
      justify-content: center;
      background: #666;
      counter-increment: number; // http://htmlbook.ru/css/counter-reset   /* Увеличиваем значение счетчика */
      width: 10vw;
      height: 10vw;
      min-width: 5em;
      min-height: 5em;
      transition: .5s all ease;
      border: 0 solid transparent;
      box-sizing: border-box;
      border-radius: 50%;
      margin: .5em;
      opacity: .7;
      &:hover {
        opacity: 1;
        cursor: pointer;

        // border - покажет полупрозрачный контур
        border: calc(2px + .85vw) solid rgba(255, 255, 255, .5);
        transition: .5s background-color ease, .2s border ease;

        // border-radius - изменяет форму кнопки
        border-top-left-radius: calc(var(--BR-X1) * 100%) \ calc(var(--BR-Y1) * 100%);
        border-top-right-radius: calc(var(--BR-X2) * 100%) \  calc(var(--BR-Y2) * 100%) ;
        border-bottom-right-radius: calc(var(--BR-X3) * 100%) \ calc(var(--BR-Y3) * 100%);
        border-bottom-left-radius:  calc(var(--BR-X4) * 100%) \ calc(var(--BR-Y4) * 100%);
        &:after {
          color: rgba(255, 255, 255, .7);
          transform: translate3d(0, 0, 0);
        }
      }
      &:after {
        // Выведем нумерацию кнопок
        content: counter(number); // http://htmlbook.ru/css/counter-reset  /* Выводим число */
        color: rgba(255, 255, 255, 0);
        font-size: calc(1vw + 1.2em);
        font-weight: 200;
        transition: all .2s ease;
        transition-delay: .1s;
        transform: translate3d(0, -.5em, 0);
      }
    }
  }
}

@media (max-width: 320px) {
  #body{
    #boxes {
      grid-template-columns: repeat(1, 1fr);
    }
  }
}
